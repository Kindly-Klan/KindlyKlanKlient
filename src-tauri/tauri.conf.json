{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kindly Klan Klient",
  "version": "0.1.2",
  "identifier": "com.kindlyklan.klient",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kindly Klan Klient v0.1.2",
        "width": 1200,
        "height": 650,
        "resizable": true,
        "minWidth": 800,
        "minHeight": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["https://crafatar.com", "https://*.minecraft.net", "http://files.kindlyklan.com", "https://files.kindlyklan.com"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/kkkicon32.png",
      "icons/kkkicon128.png",
      "icons/kkicon512.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
