{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:app:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:path:default",
    "core:event:default",
    "core:menu:default",
    "core:tray:default",
    "core:resources:default",
    "core:image:default",
    "core:webview:default",
    "opener:default",
    "opener:allow-open-url",
    "oauth:default",
    "oauth:allow-start",
    "oauth:allow-cancel",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download",
    "updater:allow-install"
  ]
}
